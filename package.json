{
  "name": "gpt-translator-bot",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Grigoriy Kolenko",
  "description": "Telegram bot that translates text using GPT-3",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "lint": "dts lint",
    "start": "cross-env NODE_ENV=development tsnd --respawn -T --cls --ignore-watch node_modules index.ts",
    "start:prod": "cross-env NODE_ENV=production ts-node -T index.ts",
    "test": "dts test",
    "test-watch": "dts test --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@tsconfig/recommended": "^1.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "dts-cli": "^1.6.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "size-limit": "^8.2.4",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "openai": "^3.2.1",
    "telegraf": "^4.12.2",
    "ts-node": "^10.9.1",
    "winston": "^3.8.2"
  }
}
